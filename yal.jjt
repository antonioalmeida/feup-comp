void Rhs():
{Token t=null;}
{ { }
  (
    Term()
    (
      (
        t=< ARITH_OP >
      | t=< BITWISE_OP >
      | t=< ADDSUB_OP >
      )
      {jjtThis.jjtAddValue(t.image);}
      Term()
    )?
  )
| ArrayAssigned()


}

